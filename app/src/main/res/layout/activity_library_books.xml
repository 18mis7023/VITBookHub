<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.LibraryBooksActivity">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBJECTS"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textColor="@color/brown"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_login"
        android:elevation="20dp"
        >
        <Button
            android:id="@+id/btnMaths"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="MATHEMATICS"
            android:textColor="@color/brown"
            android:textSize="24sp"

            android:background="@drawable/rectangle_shadow"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_login"
        android:elevation="20dp"
        >
        <Button
            android:id="@+id/btncomputer"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Computer and it"
            android:textColor="#711A1A"
            android:textSize="24sp"

            android:background="@drawable/rectangle_shadow"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_login"
        android:elevation="20dp"
        >
        <Button
            android:id="@+id/btnSoftware"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Software Engineering"
            android:textColor="#711A1A"
            android:textSize="24sp"

            android:background="@drawable/rectangle_shadow"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_login"
        android:elevation="20dp"
        >
        <Button
            android:id="@+id/btnEnglish"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="English Books"
            android:textColor="#711A1A"
            android:textSize="24sp"

            android:background="@drawable/rectangle_shadow"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_login"
        android:elevation="20dp"
        >
        <Button
            android:id="@+id/btnelectronics"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="electronics"
            android:textColor="#711A1A"
            android:textSize="24sp"

            android:background="@drawable/rectangle_shadow"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_login"
        android:elevation="20dp"
        >
        <Button
            android:id="@+id/btnCivil"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="civil books"
            android:textColor="#711A1A"
            android:textSize="24sp"

            android:background="@drawable/rectangle_shadow"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_login"
        android:elevation="20dp"
        >
        <Button
            android:id="@+id/btnMechanical"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Mechanical"
            android:textColor="#711A1A"
            android:textSize="24sp"

            android:background="@drawable/rectangle_shadow"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/box_login"
        android:elevation="20dp"
        >
        <Button
            android:id="@+id/btnphysics"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Physics book"
            android:textColor="#711A1A"
            android:textSize="24sp"

            android:background="@drawable/rectangle_shadow"/>

    </LinearLayout>
       <com.google.android.gms.ads.AdView
           xmlns:ads="http://schemas.android.com/apk/res-auto"
           android:id="@+id/adViewlibrarybooks"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
           ads:adSize="SMART_BANNER"
           ads:adUnitId="@string/banner1adview"/>
   </LinearLayout>
</ScrollView>